<div class="column">
  <!-- Title for the login section -->
  <h2 class="title pb-4">Login</h2>
  <hr>

  <!-- Login form starts here -->
  <form class="login-form">
    <div>
      <!-- Email input field -->
      <label for="email-login">Email:</label>
      <input type="email" id="email-login" required placeholder="Enter your email" />
    </div>
    
    <div>
      <!-- Password input field -->
      <label for="password-login">Password:</label>
      <input type="password" id="password-login" required placeholder="Enter your password" />
    </div>
    
    <div>
      <!-- Buttons for login and signup -->
      <button type="submit" class="button is-primary">Login</button>
      <a href="/signup">
        <button type="button" class="button is-danger">Sign Up</button>
      </a>
    </div>
  </form>
</div>

<!-- Include JavaScript for login functionality -->
<script src="/javascript/login.js"></script>
